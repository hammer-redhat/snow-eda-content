# NRPE Configuration File
# Generated by Ansible

# Log file location
log_file=/var/log/nrpe.log

# PID file location
pid_file=/var/run/nrpe.pid

# Server port
server_port=5666

# Server address (0.0.0.0 to listen on all interfaces)
server_address=0.0.0.0

# Allowed hosts (comma-separated list)
allowed_hosts=127.0.0.1,{{ ansible_default_ipv4.address }}

# Command timeout
command_timeout=60

# Connection timeout
connection_timeout=300

# Debug level (0-2)
debug=0

# Include additional configuration files
include_dir={{ nagios_config_dir }}/nrpe.d/

# Don't use SSL
dont_blame_nrpe=1
