# NRPE Commands Configuration
# Generated by Ansible

# Basic system checks
command[check_load]=/usr/lib64/nagios/plugins/check_load -w 15,10,5 -c 30,25,20
command[check_disk]=/usr/lib64/nagios/plugins/check_disk -w 20% -c 10% -p /
command[check_memory]=/usr/lib64/nagios/plugins/check_memory -w 80% -c 90%
command[check_cpu]=/usr/lib64/nagios/plugins/check_cpu -w 80% -c 90%
command[check_swap]=/usr/lib64/nagios/plugins/check_swap -w 80% -c 90%

# Network checks
command[check_ssh]=/usr/lib64/nagios/plugins/check_ssh -H localhost
command[check_http]=/usr/lib64/nagios/plugins/check_http -H localhost

# Process checks
command[check_procs]=/usr/lib64/nagios/plugins/check_procs -w 250 -c 400
command[check_zombie_procs]=/usr/lib64/nagios/plugins/check_procs -w 5 -c 10 -s Z

# Custom checks
command[check_uptime]=/usr/lib64/nagios/plugins/check_uptime -w 86400 -c 604800
command[check_users]=/usr/lib64/nagios/plugins/check_users -w 5 -c 10
